{
  "expo": {
    "name": "ReelMates",
    "slug": "reelmates",
    "scheme": "reelmates",
    "version": "1.0.0",
    "orientation": "portrait",
    "plugins": ["expo-router"],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.reelmates.app"
    },
    "android": {
      "package": "com.reelmates.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0F1115"
      }
    },
    "web": { "bundler": "metro", "favicon": "./assets/favicon.png" },
    "extra": {
      "EXPO_PUBLIC_SUPABASE_URL": "$env:EXPO_PUBLIC_SUPABASE_URL",
      "EXPO_PUBLIC_SUPABASE_ANON": "$env:EXPO_PUBLIC_SUPABASE_ANON",
      "EXPO_PUBLIC_TMDB_READ_TOKEN": "$env:EXPO_PUBLIC_TMDB_READ_TOKEN"
    }
  }
}
